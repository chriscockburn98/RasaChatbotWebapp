<html>

<head>
  <title>Classbot</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=0" />

  <script defer type="text/javascript" src="/js/adminjs.js"></script>
  <script defer type="text/javascript" src="jquery/dist/jquery.min.js"></script>

  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <link rel="stylesheet" type="text/css" href="/css/ChatboxStyle.css">

  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />
  <script defer type="text/javascript" src="js/materialize.min.js"></script>


  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <script defer src="https://kit.fontawesome.com/63619a1d34.js" crossorigin="anonymous"></script>
</head>

<body>
  <nav>
    <div class="nav-wrapper" style="background-color: #69a9e9;">
      <a href="/chatbot" class="brand-logo" style="text-decoration: none; padding-left: 30px;">ClassBot</a>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger" style="text-decoration: none;"><i
          class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <li>
          <form action="/logout" method="POST">
            <input style="border:none; background-color:transparent; outline:none; color: white; padding-right: 30px;"
              type="submit" name="submit" value="Logout" />
          </form>
        </li>
      </ul>
    </div>
  </nav>

  <ul class="sidenav" id="mobile-demo">
    <li>
      <form action="/logout" method="POST">
        <input style="border:none; background-color:transparent; outline:none; color: black;" type="submit"
          name="submit" value="Logout" />
      </form>
    </li>
  </ul>

  <div style="display: flex; flex: 1; flex-direction: row; justify-content: space-around; padding: 20px;">

    <div style="display: flex; flex: 1; flex-direction: column; padding: 20px; max-width: 500px;">
      <h3>Accounts</h3>
      <div style="max-height: 600px; max-width: 25rem; overflow: scroll;">
        <ul id="getCurrentUsersList">
        </ul>
      </div>
    </div>

    <div
      style="display: flex; flex: 1; flex-direction: column; justify-content: center; max-height: 600px; max-width: 25rem;">
      <h3>Create Account</h3>
      <form action="/createAccount" method="POST" style="width: 300px">
        <div class="form-group"
          style="display: flex; flex-direction: column; flex-wrap: wrap; justify-content: center;">
          <div style="margin-top: 30px;">
            <label for="username">Username</label>
            <input class="form-control" type="text" name="username" autocomplete="off" autofocus="true" required>
            <label for="username">Password</label>
            <input class="form-control" type="password" name="password" autocomplete="off" required>
            <label for="accountType">Account Type</label>
            <select class="form-control" type="select" name="accountType" autocomplete="off" required>
              <option value="student">Student</option>
              <option value="admin">Administrator</option>
            </select>
            <input class="form-control btn btn-primary" type="submit" name="Submit" value="Enter"
              style="margin-top: 30px;">
          </div>
        </div>
      </form>
    </div>
  </div>

  <div style="display: flex; flex: 1; flex-direction: row; justify-content: space-around; padding: 20px;">
    <div style="display: flex; flex: 1; flex-direction: column; padding: 20px; max-width: 500px;">
      <h3>Frequent response to students</h3>
      <div
        style="display: flex; flex: 1; flex-direction: row; justify-content: center; max-height: 600px; max-width: 25rem; overflow: scroll;">
        <ul id="mostFrequentIntentResponseList">
        </ul>
      </div>
    </div>

    <div style="display: flex; flex: 1; flex-direction: column; padding: 20px; max-width: 500px;">
      <h3>Not Relevant Feedback</h3>
      <div
        style="display: flex; flex: 1; flex-direction: row; justify-content: center; max-height: 600px; max-width: 25rem; overflow: scroll;">
        <ul id="notRelevantQueryList">
        </ul>
      </div>
    </div>
  </div>
</body>

</html>